<%= form_for @user do |f|%>
	<%= render 'shared/error_messages', object: @user %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :username, placeholder: "enter username" %>
	</p>
	<p>
		<%= f.label :email%>
		<%= f.email_field :email, placeholder: "enter email"%>
	</p>
	<p>
		<%= f.label :password%>
		<%= f.password_field :password, placeholder: "password"%>
	</p>
	<p>
			<%= f.submit (@user.new_record? ? "signup" : "update account")%>
	</p>
<%end%>