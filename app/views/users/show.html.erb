<h1>
	<p align = "center">
    <%= gravatar_for @user%>
		</br><%= @user.username %>
	</p>
</h1>
<h2 align="center"><%=link_to "create new post", root_url%>

<% if @user.posts.any? %>
	<h3>Posts (<%= @user.posts.count %>)</h3>
	<ol>
    <%= render @posts %>
  	</ol>
	<%= will_paginate @posts %>
<%end%>
